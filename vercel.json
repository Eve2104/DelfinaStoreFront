{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/(.*)",     "destination": "https://delfina-api.onrender.com/api/$1" },
    { "source": "/uploads/(.*)", "destination": "https://delfina-api.onrender.com/uploads/$1" },
    { "source": "/assets/(.*)",  "destination": "/assets/$1" },
    { "source": "/(.*)",         "destination": "/" }
  ]
}
